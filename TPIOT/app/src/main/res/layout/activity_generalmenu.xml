<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"

        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/iot3"
            />
        <Button
            android:id="@+id/btnWififorESP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#2196F3"
            android:layout_marginBottom="10dp"
            android:letterSpacing="0.2"
            android:text="Saisir info wifi"
            android:textColor="#d9e5f3"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnTelemetrie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#2196F3"
            android:layout_marginBottom="10dp"
            android:letterSpacing="0.2"
            android:text="Modifier info telemetrie"
            android:textColor="#d9e5f3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#2196F3"
            android:layout_marginBottom="10dp"
            android:letterSpacing="0.2"
            android:text="Temerature Recap"
            android:textColor="#d9e5f3"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnHumidite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#2196F3"
            android:letterSpacing="0.2"
            android:text="HumiditÃ© recap"
            android:textColor="#d9e5f3"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>